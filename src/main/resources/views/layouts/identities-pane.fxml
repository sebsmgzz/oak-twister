<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<?import javafx.geometry.Insets?>
<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.VBox"
         fx:controller="com.oaktwister.views.layouts.IdentitiesPane"
         stylesheets="/styles/layouts/identities-pane.css"
         alignment="CENTER"
         prefHeight="400.0" prefWidth="600.0">
    <Label fx:id="titleLabel" styleClass="title" text="Identities" maxWidth="Infinity" alignment="CENTER" VBox.vgrow="NEVER"/>
    <AnchorPane fx:id="anchorPane" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
        <FlowPane fx:id="flowPane" styleClass="flow-pane" hgap="10" vgap="10"
              AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </FlowPane>
    </AnchorPane>
    <HBox styleClass="hbox" alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
        <Button fx:id="addButton" text="Add" minWidth="100"/>
    </HBox>
</fx:root>
