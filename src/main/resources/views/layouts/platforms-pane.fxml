<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.VBox"
         fx:controller="com.oaktwister.views.layouts.PlatformsPane"
         alignment="CENTER"
         prefHeight="400.0" prefWidth="600.0">
    <Label fx:id="titleLabel" text="Platforms" />
    <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER">
        <FlowPane fx:id="flowPane" />
    </ScrollPane>
    <HBox alignment="CENTER_RIGHT">
        <Button fx:id="addButton" text="Add" />
    </HBox>
</fx:root>
