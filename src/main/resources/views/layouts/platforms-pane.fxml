<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.VBox"
         fx:controller="com.oaktwister.views.layouts.PlatformsPane"
         stylesheets="/styles/layouts/platforms-pane.css"
         alignment="CENTER">
    <Label fx:id="titleLabel" styleClass="title" text="Platforms" maxWidth="Infinity" alignment="CENTER"/>
    <ScrollPane fx:id="scrollPane" styleClass="scroll-pane" hbarPolicy="NEVER" hvalue="0.5" vvalue="0.5"
                fitToHeight="true" fitToWidth="true">
        <FlowPane fx:id="flowPane" styleClass="flow-pane" alignment="TOP_CENTER" vgap="10" hgap="10"/>
    </ScrollPane>
    <HBox styleClass="hbox" alignment="CENTER_RIGHT">
        <Button fx:id="addButton" text="Add" styleClass="none" minWidth="100"/>
    </HBox>
</fx:root>
