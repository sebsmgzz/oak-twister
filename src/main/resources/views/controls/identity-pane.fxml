<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.StackPane"
         fx:controller="com.oaktwister.views.controls.IdentityPane"
         stylesheets="/styles/controls/identity-pane.css"
         styleClass="root">
    <AnchorPane>
        <Button fx:id="mainButton" styleClass="btn" mnemonicParsing="false"
                AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
            <graphic>
                <AnchorPane>
                    <VBox alignment="CENTER_LEFT" maxHeight="100"
                          AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                        </padding>
                        <HBox spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <Label text="Id:"/>
                            <Label fx:id="identifierLabel" text="00000000-0000-0000-0000-000000000000"/>
                        </HBox>
                        <HBox spacing="10.0" VBox.vgrow="NEVER">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <Label text="Grants:"/>
                            <Label fx:id="grantsLabel" text="#"/>
                        </HBox>
                        <HBox spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <Label text="Created at:"/>
                            <Label fx:id="createdAtLabel" text="01/01/2022"/>
                        </HBox>
                    </VBox>
                </AnchorPane>
            </graphic>
        </Button>
    </AnchorPane>
    <Button fx:id="deleteButton" styleClass="close-btn"
            visible="false" mnemonicParsing="false" text="X"
            translateX="5.0" translateY="-5.0" />
</fx:root>
