<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.HBox"
         fx:controller="com.oaktwister.views.controls.AccountBox"
         stylesheets="/styles/controls/account-box.css"
         styleClass="root">
    <ImageView fx:id="imageView" fitWidth="50" fitHeight="50">
        <Image url="/images/placeholders/image.png" />
    </ImageView>
    <Label fx:id="platformNameLabel" />
    <VBox styleClass="vbox" prefWidth="300">
        <HBox>
            <Label text="Account: " />
            <Label fx:id="idLabel" />
        </HBox>
        <HBox>
            <Label text="Grants: " />
            <Label fx:id="grantsCountLabel" />
        </HBox>
        <HBox>
            <Label text="Created at: " />
            <Label fx:id="createdAtLabel" />
        </HBox>
    </VBox>
</fx:root>
