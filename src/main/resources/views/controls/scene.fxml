<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>


<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane styleClass="root" stylesheets="/styles/controls/identity-pane.css">
         <children>
             <Button fx:id="button" mnemonicParsing="false" styleClass="btn">
                 <graphic>
                     <AnchorPane>
                        <children>
                            <VBox alignment="CENTER_LEFT" maxHeight="100" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                               <children>
                                   <HBox spacing="10.0">
                                       <padding>
                                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </padding>
                                      <children>
                                          <Label text="Id:" />
                                          <Label fx:id="identifierLabel" text="00000000-0000-0000-0000-000000000000" />
                                      </children>
                                   </HBox>
                                   <HBox spacing="10.0" VBox.vgrow="NEVER">
                                       <padding>
                                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </padding>
                                      <children>
                                          <Label text="Grants:" />
                                          <Label fx:id="grantsLabel" text="#" />
                                      </children>
                                   </HBox>
                                   <HBox spacing="10.0">
                                       <padding>
                                           <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </padding>
                                      <children>
                                          <Label text="Created at:" />
                                          <Label fx:id="createdAtLabel" text="01/01/2022" />
                                      </children>
                                   </HBox>
                               </children>
                            </VBox>
                        </children>
                     </AnchorPane>
                 </graphic>
             </Button>
         </children>
      </AnchorPane>
      <Button mnemonicParsing="false" text="X" translateX="15.0" translateY="-15.0" StackPane.alignment="TOP_RIGHT" />
   </children>
</StackPane>
