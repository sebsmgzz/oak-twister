<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.oaktwister.views.roots.MainViewController"
            fx:id="borderPane"
            stylesheets="/styles/roots/main.css"
            styleClass="root"
            prefWidth="1000" prefHeight="600">
    <left>
        <VBox styleClass="vbox-out" prefWidth="200">
            <HBox>
                <Label styleClass="title" text="OakTwister" alignment="CENTER" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            </HBox>
            <VBox fx:id="vbox" styleClass="vbox-in" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS"/>
            <Button styleClass="clickable" text="Back" onAction="#onBackButtonAction" maxWidth="Infinity"/>
            <Button styleClass="clickable" text="Settings" maxWidth="Infinity" VBox.vgrow="NEVER"/>
        </VBox>
    </left>
</BorderPane>
