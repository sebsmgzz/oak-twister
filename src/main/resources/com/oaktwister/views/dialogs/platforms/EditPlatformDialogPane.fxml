<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.oaktwister.views.dialogs.platforms.EditPlatformDialogController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
        <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">

            <Tab text="Overview">
                <AnchorPane prefHeight="180.0" prefWidth="200.0">
                    <GridPane AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">

                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints vgrow="NEVER"/>
                            <RowConstraints vgrow="NEVER"/>
                            <RowConstraints vgrow="ALWAYS"/>
                        </rowConstraints>

                        <Label alignment="CENTER_RIGHT" maxWidth="Infinity" text="Name"
                               GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </Label>

                        <Label text="URL" alignment="CENTER_RIGHT" maxWidth="Infinity"
                               GridPane.halignment="CENTER" GridPane.valignment="CENTER"
                               GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </Label>

                        <TextField fx:id="nameTextField" GridPane.columnIndex="1"
                                   GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>

                        <TextField fx:id="urlTextField"
                                   GridPane.rowIndex="1" GridPane.columnIndex="1"
                                   GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                        </TextField>

                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
                              GridPane.rowIndex="2" GridPane.columnSpan="2"
                              GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
                              GridPane.valignment="CENTER" GridPane.halignment="CENTER">
                            <GridPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </GridPane.margin>
                            <ImageView fx:id="imageView" fitWidth="200.0" pickOnBounds="true"
                                       preserveRatio="true" VBox.vgrow="ALWAYS">
                                <Image url="/com/oaktwister/images/placeholders/image.png"/>
                            </ImageView>
                            <Button text="Browse" minWidth="100.0"
                                    mnemonicParsing="false" VBox.vgrow="NEVER"/>
                        </VBox>

                    </GridPane>
                </AnchorPane>
            </Tab>

            <Tab text="Claims">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <TableView fx:id="claimsTableView" editable="true" layoutX="27.0" layoutY="89.0"
                               AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                               AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
                        <columns>
                            <TableColumn fx:id="nameColumn" minWidth="100.0" text="Name"/>
                            <TableColumn fx:id="grantTypeColumn" minWidth="100.0" text="Grant type"/>
                            <TableColumn fx:id="optionalColumn" minWidth="100.0" text="Optional"/>
                        </columns>
                    </TableView>
                </AnchorPane>
            </Tab>

        </TabPane>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button fx:id="saveButton" minWidth="100.0" mnemonicParsing="false" text="Save"/>
            <Button fx:id="cancelButton" minWidth="100.0" mnemonicParsing="false" text="Cancel"/>
        </HBox>

    </VBox>
</AnchorPane>
