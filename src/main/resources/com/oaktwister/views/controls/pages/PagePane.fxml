<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.AnchorPane"
         fx:controller="com.oaktwister.views.controls.pages.PagePane"
         stylesheets="/com/oaktwister/styles/accounts/accounts-pane.css"
         prefHeight="400.0" prefWidth="600.0">
    <VBox fx:id="vbox" alignment="TOP_CENTER">
        <Label fx:id="titleLabel" styleClass="title" text="Accounts" maxWidth="Infinity" alignment="CENTER"/>
        <AnchorPane styleClass="scroll-pane" VBox.vgrow="ALWAYS">
            <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER"
                        AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                        AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
                <FlowPane fx:id="flowPane" styleClass="flow-pane" hgap="10" vgap="10">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </FlowPane>
            </ScrollPane>
        </AnchorPane>
        <HBox styleClass="hbox" alignment="CENTER_RIGHT">
            <Button fx:id="addButton" text="Add" minWidth="100"/>
        </HBox>
    </VBox>
</fx:root>
