<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.image.Image?>

<fx:root xmlns="http://javafx.com/javafx/8"
         type="javafx.scene.control.DialogPane"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.oaktwister.views.platforms.EditPlatformDialogPane"
         prefWidth="600.0" prefHeight="600.0">
    <graphic>
        <AnchorPane fx:id="anchorPane">
            <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS"
                     AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                     AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">

                <Tab text="Overview">
                    <AnchorPane prefHeight="180.0" prefWidth="200.0">
                        <GridPane AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="NEVER"/>
                                <RowConstraints vgrow="NEVER"/>
                                <RowConstraints vgrow="ALWAYS"/>
                            </rowConstraints>

                            <Label text="Name" alignment="CENTER_RIGHT" maxWidth="Infinity"
                                   GridPane.halignment="CENTER"
                                   GridPane.valignment="CENTER">
                                <GridPane.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </GridPane.margin>
                            </Label>

                            <Label text="URL"
                                   alignment="CENTER_RIGHT" maxWidth="Infinity"
                                   GridPane.rowIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                                <GridPane.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </GridPane.margin>
                            </Label>

                            <TextField fx:id="nameTextField" GridPane.columnIndex="1"
                                       GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                                <GridPane.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </GridPane.margin>
                            </TextField>

                            <TextField fx:id="urlTextField" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                                       GridPane.rowIndex="1" GridPane.valignment="CENTER">
                                <GridPane.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </GridPane.margin>
                            </TextField>

                            <VBox spacing="10.0" alignment="CENTER" prefHeight="200.0" prefWidth="100.0"
                                  GridPane.rowIndex="2" GridPane.columnSpan="2"
                                  GridPane.halignment="CENTER" GridPane.valignment="CENTER"
                                  GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                                <GridPane.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                </GridPane.margin>
                                <ImageView fx:id="imageView" fitWidth="200.0" pickOnBounds="true"
                                           preserveRatio="true" VBox.vgrow="ALWAYS">
                                    <Image url="/com/oaktwister/images/placeholders/image.png"/>
                                </ImageView>
                                <Button text="Browse" minWidth="100.0" mnemonicParsing="false" VBox.vgrow="NEVER"/>
                            </VBox>

                        </GridPane>
                    </AnchorPane>
                </Tab>

                <Tab text="Claims">
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                        <TableView fx:id="claimsTableView" layoutX="27.0" layoutY="89.0"
                                   AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="nameColumn" text="Name" minWidth="100.0"/>
                                <TableColumn fx:id="grantTypeColumn" text="Grant type" minWidth="100.0"/>
                                <TableColumn fx:id="optionalColumn" text="Optional" minWidth="100.0"/>
                            </columns>
                        </TableView>
                    </AnchorPane>
                </Tab>

            </TabPane>
        </AnchorPane>
    </graphic>
</fx:root>
