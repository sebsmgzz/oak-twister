<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.AnchorPane"
         fx:controller="com.oaktwister.views.platforms.PlatformsPane"
         stylesheets="/com/oaktwister/styles/platforms/platforms-pane.css">
    <VBox fx:id="vbox" alignment="CENTER">
        <Label fx:id="titleLabel" styleClass="title" text="Platforms" maxWidth="Infinity" alignment="CENTER"/>
        <ScrollPane fx:id="scrollPane" styleClass="scroll-pane" hbarPolicy="NEVER" hvalue="0.5" vvalue="0.5"
                    fitToHeight="true" fitToWidth="true">
            <FlowPane fx:id="flowPane" styleClass="flow-pane" alignment="TOP_CENTER" vgap="10" hgap="10">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </FlowPane>
        </ScrollPane>
        <HBox styleClass="hbox" alignment="CENTER_RIGHT">
            <Button fx:id="addButton" styleClass="none" text="Add" minWidth="100"/>
        </HBox>
    </VBox>
</fx:root>
