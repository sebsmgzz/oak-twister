<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<fx:root type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.oaktwister.views.widgets.PagePane"
         alignment="TOP_CENTER">

    <Label fx:id="titleLabel" text="Title"
           maxWidth="Infinity" alignment="CENTER"
           style="-fx-background-color: #A2C6BB;">
        <font>
            <Font name="System Bold" size="30.0"/>
        </font>
        <padding>
            <Insets bottom="22.0" top="10.0"/>
        </padding>
    </Label>

    <AnchorPane fx:id="anchorPane" VBox.vgrow="ALWAYS" />

    <HBox alignment="CENTER_RIGHT">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Button fx:id="addButton" text="Add" minWidth="100"/>
    </HBox>

</fx:root>
