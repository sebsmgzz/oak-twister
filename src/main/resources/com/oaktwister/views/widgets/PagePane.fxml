<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<fx:root type="javafx.scene.layout.AnchorPane"
         xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.oaktwister.views.widgets.PagePane">
    <VBox alignment="TOP_CENTER"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <Label fx:id="titleLabel" text="Title"
               maxWidth="Infinity" alignment="CENTER"
               style="-fx-background-color: #A2C6BB;">
            <font>
                <Font name="System Bold" size="30.0"/>
            </font>
            <padding>
                <Insets bottom="22.0" top="10.0"/>
            </padding>
        </Label>

        <AnchorPane VBox.vgrow="ALWAYS">
            <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER"
                        AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                        AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                        style="-fx-background-color: transparent; -fx-control-inner-background: transparent;"/>
        </AnchorPane>

        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button fx:id="addButton" text="Add" minWidth="100"/>
        </HBox>

    </VBox>
</fx:root>
