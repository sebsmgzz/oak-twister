<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import com.oaktwister.app.views.widgets.DeleteFrame?>
<fx:root xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.AnchorPane"
         fx:controller="com.oaktwister.app.views.platforms.PlatformPane"
         style="-fx-background-color: #E8CFB5; -fx-background-radius: 10px;">
    <DeleteFrame fx:id="deleteFrame"
                 AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0"
                 AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0">
        <graphic>
            <VBox alignment="CENTER"
                  AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
                <Label fx:id="identifierLabel" text="00000000-0000-0000-0000-000000000000" VBox.vgrow="NEVER"/>
                <ImageView fx:id="imageView" styleClass="imageView" VBox.vgrow="ALWAYS"
                           preserveRatio="true" fitHeight="100.0">
                    <Image url="/com/oaktwister/app/images/placeholders/image.png"/>
                </ImageView>
                <Label fx:id="nameLabel" text="title" VBox.vgrow="NEVER"/>
                <HBox VBox.vgrow="NEVER" alignment="CENTER">
                    <Label text="Created at: "/>
                    <Label fx:id="createdAtLabel" text="yyyy/MM/dd"/>
                </HBox>
            </VBox>
        </graphic>
    </DeleteFrame>
</fx:root>
