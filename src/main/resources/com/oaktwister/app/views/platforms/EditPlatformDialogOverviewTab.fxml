<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<fx:root xmlns="http://javafx.com/javafx/8"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.oaktwister.app.views.platforms.EditPlatformDialogOverviewTab"
         type="javafx.scene.layout.GridPane"
          AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">

    <columnConstraints>
        <ColumnConstraints hgrow="NEVER"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>

    <Label alignment="CENTER_RIGHT" maxWidth="Infinity" text="Name:"
           GridPane.halignment="CENTER" GridPane.valignment="CENTER">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Label>

    <Label text="URL:" alignment="CENTER_RIGHT" maxWidth="Infinity"
           GridPane.halignment="CENTER" GridPane.valignment="CENTER"
           GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </Label>

    <TextField fx:id="platformNameTextField" GridPane.columnIndex="1"
               GridPane.halignment="CENTER" GridPane.valignment="CENTER">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </TextField>

    <TextField fx:id="platformUrlTextField"
               GridPane.rowIndex="1" GridPane.columnIndex="1"
               GridPane.halignment="CENTER" GridPane.valignment="CENTER">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
    </TextField>

    <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
          GridPane.rowIndex="2" GridPane.columnSpan="2"
          GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
          GridPane.valignment="CENTER" GridPane.halignment="CENTER">
        <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </GridPane.margin>
        <ImageView fx:id="platformImageView" fitWidth="200.0" pickOnBounds="true"
                   preserveRatio="true" VBox.vgrow="ALWAYS">
            <Image url="/com/oaktwister/app/images/placeholders/image.png"/>
        </ImageView>
        <Button text="Browse" minWidth="100.0"
                mnemonicParsing="false" VBox.vgrow="NEVER"/>
    </VBox>

</fx:root>
