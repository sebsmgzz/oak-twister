<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import com.oaktwister.app.views.widgets.dialogs.DialogFrame?>

<?import com.oaktwister.app.views.platforms.EditPlatformDialogOverviewTab?>
<?import com.oaktwister.app.views.platforms.EditPlatformDialogClaimsTab?>

<fx:root xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.AnchorPane"
         fx:controller="com.oaktwister.app.views.platforms.EditPlatformDialog"
         minWidth="600.0">
    <DialogFrame fx:id="dialogFrame"
                 AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0"
                 AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
        <content>
            <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">

                <Tab text="Overview">
                    <EditPlatformDialogOverviewTab fx:id="overviewTab" />
                </Tab>

                <Tab text="Claims">
                    <EditPlatformDialogClaimsTab fx:id="claimsTab" />
                </Tab>

            </TabPane>
        </content>
    </DialogFrame>
</fx:root>
